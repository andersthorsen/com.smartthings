{
  "id": "com.smartthings",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Samsung SmartThings"
  },
  "description": {
    "en": "Adds support for Samsung SmartThings sensors"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Anders Thorsen",
    "email": "anders@anders.to"
  },
  "drivers": [
    {
      "id": "motionv5",
      "name": {
        "en": "Motion Sensor (2016)"
      },
      "class": "sensor",
      "capabilities": [
        "measure_battery",
        "alarm_battery",
        "alarm_motion",
        "measure_temperature"
      ],
      "energy": {
        "batteries": [ "CR2477" ]
      },
      "zigbee": {
        "manufacturerName": "SmartThings",
        "productId": [
          "motionv5"
        ],
        "deviceId": 1026,
        "profileId": 260,
        "endpoints": {
          "1": {
            "clusters": [0, 1, 1026, 1280],
            "bindings": [0, 1, 1026, 1280]
          }
        }        
      },
      "images": {
        "large": "/drivers/motionv5/assets/images/large.png",
        "small": "/drivers/motionv5/assets/images/small.png"
      }
    },
    {
      "id": "multiv4",
      "name": {
        "en": "Multipurpose Sensor"
      },
      "class": "homealarm",
      "capabilities": [
        "measure_battery",
        "alarm_battery",
        "alarm_contact",
        "alarm_tamper",
        "measure_temperature"
      ],
      "energy": {
        "batteries": [ "CR2450" ]
      },
      "zigbee": {
        "manufacturerName": "SmartThings",
        "productId": [
          "multiv4"
        ],        
        "deviceId": 1026,
        "profileId": 260,
        "endpoints": {
          "1": {
            "clusters": [0, 1, 1026, 1280],
            "bindings": [0, 1, 1026, 1280]
          }
        }        
      },
      "images": {
        "large": "/drivers/multiv4/assets/images/large.png",
        "small": "/drivers/multiv4/assets/images/small.png"
      }
    }
  ]
}